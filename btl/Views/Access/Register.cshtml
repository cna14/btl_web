@model btl.Models.NguoiDung

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    <link href="LayoutAdmin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                                <div class="card-body">
                                    <form asp-action="Register">
                                        <div class="form-floating mb-3">
                                            <input asp-for="TenDangNhap" class="form-control" id="inputUserName" type="text" />
                                            <label for="inputEmail">UserName</label>
                                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input asp-for="MatKhau" class="form-control" id="inputPassword" type="text" />
                                                    <label for="inputPassword">Password</label>
                                                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="GioiTinh" class="form-control" id="inputUserName" type="text" />
                                                    <label for="inputEmail">Gender</label>
                                                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input asp-for="Ho" class="form-control" id="inputUserName" type="text" />
                                                    <label for="inputEmail">First Name</label>
                                                    <span asp-validation-for="Ho" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="Ten" class="form-control" id="inputUserName" type="text" />
                                                    <label for="inputEmail">Last Name</label>
                                                    <span asp-validation-for="Ten" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="DiaChi" class="form-control" id="inputUserName" type="text" />
                                            <label for="inputEmail">Address</label>
                                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Gmail" class="form-control" id="inputUserName" type="text" />
                                            <label for="inputEmail">Gmail</label>
                                            <span asp-validation-for="Gmail" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="LoaiDangNhap" class="form-control" id="inputUserName" type="text" />
                                            <label for="inputEmail">Type User</label>
                                            <span asp-validation-for="LoaiDangNhap" class="text-danger"></span>
                                        </div>

                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <input type="submit" value="Create" class="btn btn-primary btn-block" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a asp-action="Login">Have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="LayoutAdmin/js/scripts.js"></script>
</body>
</html>

