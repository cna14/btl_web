
@model Order
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/orderLayout.cshtml";
}
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Products</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>

                @foreach (var line in Model?.Lines)
                {

                    <tr>
                        <th scope="row">
                            <div class="d-flex align-items-center">
                                <img src="@line.SanPham.DuongDanAnh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                            </div>
                        </th>
                        <td>
                            <p class="mb-0 mt-4">@line.SanPham.TenSp</p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">@line.SanPham.GiaBan.ToString()</p>
                        </td>
                        <td>
                            <div class="input-group quantity mt-4" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border">
                                        <a class="fa fa-minus"></a>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm text-center border-0" value="@line.SoLuongb">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border">
                                        <a class="fa fa-plus"></a>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">
                            @(line.SanPham.GiaBan * line.SoLuongb / 1000).000 VNĐ
                                
                            </p>
                        </td>
                        <td>
                            <button class="btn btn-md rounded-circle bg-light border mt-4">
                            <a href="/Cart/RemoveFromOrder/?maSp=@line.SanPham.MaSp" class="fa fa-times text-danger"></a>
                            </button>
                        </td>

                    </tr>
                }
            @*

            *@
        </tbody>
    </table>
</div>
<div class="mt-5">
    <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Coupon Code">
    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button">Apply Coupon</button>
</div>
<div class="row g-4 justify-content-end">
    <div class="col-8"></div>
    <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
        <div class="bg-light rounded">
            <div class="p-4">
                <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                <div class="d-flex justify-content-between mb-4">
                    <h5 class="mb-0 me-4">Subtotal:</h5>
                    <p class="mb-0">Thêm Tổng Tiền Hóa đơn</p>
                </div>
            </div>
            <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</button>
        </div>
    </div>
</div>


